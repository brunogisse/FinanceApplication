    SQL.Strings = (
      'select'
      '  P.PRODUTO_ID,'
      '  P.DESCRICAO,'
      '  P.VALOR,'
      '  P.ESTOQUE_MINIMO,'
      '  P.TIPO as TIPO_ID,'
      '  P.ESTOQUE,'
      '  '
      '  T.TIPO_PRODUTO_ID,'
      '  T.DESCRICAO as TIPO'
      ''
      'from PRODUTO P, TIPO_PRODUTO T'
      ''
      'where'
      ''
      '  (P.TIPO = T.TIPO_PRODUTO_ID) and'
      '  (PRODUTO_ID = :CODIGOPRODUTO)'
      ''
      'order by P.DESCRICAO ASC')
    Left = 584
